    <div class="card-header" id="headingThree">
      <h2 class="mb-0">
        <button id="gear_button" class="btn btn-link btn-block text-left collapsed" type="button" data-toggle="collapse" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour"></button>
      </h2>
    </div>
    <div id="collapseFour" class="collapse" aria-labelledby="headingFour" data-parent="#accordionExample">
      <div id="gear_rec" class="card-body"></div>
